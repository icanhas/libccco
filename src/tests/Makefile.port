libs=-lcsp ${platlibs} -lm
b=${bin}

progs= \
  $b/1$E \
  $b/spawnexit$E \
  $b/chanrecvp$E \
  $b/closedchan$E \
  $b/openedchan$E \
  $b/random$E
  
ofiles= \
  1.$O \
  spawnexit.$O \
  chanrecvp.$O \
  closedchan.$O \
  openedchan.$O \
  random.$O

all: clean ${progs}
  
.c.$O:
	${CC} ${CFLAGS} -c -o $@ $<
	
c=${CC} ${LDFLAGS} -o $@ $? ${libs}
$b/1$E: 1.$O
	$c
$b/spawnexit$E: spawnexit.$O
	$c
$b/chanrecvp$E: chanrecvp.$O
	$c
$b/closedchan$E: closedchan.$O
	$c
$b/openedchan$E: openedchan.$O
	$c
$b/random$E: random.$O
	$c
	
runtests:
	./runtests.sh 10 ${progs}

clean:
	rm -f ${progs} ${ofiles}
